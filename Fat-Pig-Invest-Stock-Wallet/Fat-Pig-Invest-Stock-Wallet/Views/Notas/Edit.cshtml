@model Fat_Pig_Invest_Stock_Wallet.Models.Nota

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Nota de negociação</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group row col-md-12">
                <div class="form-group col-md-4">
                    <label asp-for="NumeroNota" class="control-label"></label>
                    <input asp-for="NumeroNota" class="form-control" />
                    <span asp-validation-for="NumeroNota" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DataPregao" class="control-label"></label>
                    <input asp-for="DataPregao" class="form-control" />
                    <span asp-validation-for="DataPregao" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CorretoraId" class="control-label"></label>
                    <select asp-for="CorretoraId" class="form-control" asp-items="ViewBag.CorretoraId"></select>
                    <span asp-validation-for="CorretoraId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row col-md-12">
                <div class="form-group col-md-4">
                    <label asp-for="TaxaLiquidacao" class="control-label"></label>
                    <input asp-for="TaxaLiquidacao" class="form-control" />
                    <span asp-validation-for="TaxaLiquidacao" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Emolumentos" class="control-label"></label>
                    <input asp-for="Emolumentos" class="form-control" />
                    <span asp-validation-for="Emolumentos" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Corretagem" class="control-label"></label>
                    <input asp-for="Corretagem" class="form-control" />
                    <span asp-validation-for="Corretagem" class="text-danger"></span>
                </div>
            </div>            
            
            <div class="form-group div-botoes-editar">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-secondary form-botao-cancelar" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

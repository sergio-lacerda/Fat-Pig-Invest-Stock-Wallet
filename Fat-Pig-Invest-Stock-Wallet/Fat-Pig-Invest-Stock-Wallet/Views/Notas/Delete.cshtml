@model Fat_Pig_Invest_Stock_Wallet.Models.Nota

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar</h1>

<h3>Tem certeza que quer apagar essa nota?</h3>
<div>
    <h4>Nota de negociação</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroNota)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroNota)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataPregao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPregao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Corretora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Corretora.Nome)
        </dd>        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> 
        <a class="btn btn-secondary form-botao-cancelar" asp-action="Index">Cancelar</a>
    </form>
</div>

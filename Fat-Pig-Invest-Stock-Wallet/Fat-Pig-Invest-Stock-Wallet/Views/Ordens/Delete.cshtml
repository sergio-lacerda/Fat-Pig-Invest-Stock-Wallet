@model Fat_Pig_Invest_Stock_Wallet.Models.Ordem

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar</h1>

<h3>Tem certeza que quer apagar essa ordem?</h3>
<div>
    <h4>Ordem</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nota)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nota.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoOrdem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoOrdem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Acao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Acao.Ticker)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoUnitario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoUnitario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> 
        <a class="btn btn-secondary form-botao-cancelar" asp-controller="Ordens" asp-action="CreateOrder" asp-route-id="@Model.NotaId">Cancelar</a>
    </form>
</div>
